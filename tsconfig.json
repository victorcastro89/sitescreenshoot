{
  "compilerOptions": {
    "target": "es2021",
    "module": "ES2020",
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    },
    "lib": ["ES2021"],
    "rootDir": ".",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "allowImportingTsExtensions":true,
    "noEmit": true,
    "typeRoots" : ["./node_modules/@types"],
    
  
  },
  "include": [
    "src/**/*",
    "wappalyzer/src/drivers/npm/**/*"
 ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
